# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

GET		/cunmin									Application.cunmin
GET		/cunmin/login							LoginCtl.cunminLogin

GET		/cunqing								Application.cunqing
GET		/cunqing/login							LoginCtl.cunqingLogin

# User
GET		/houtai/user/page						UserCtl.page
POST	/houtai/user/edit						UserCtl.edit
GET		/houtai/user/edit						UserCtl.edit
POST	/houtai/user/save						UserCtl.save
POST	/houtai/user/get						UserCtl.get

# Power
GET		/houtai/power/page						PowerCtl.page
POST	/houtai/power/edit						PowerCtl.edit
GET		/houtai/power/edit						PowerCtl.edit
POST	/houtai/power/save						PowerCtl.save
POST	/houtai/power/get						PowerCtl.get

# Role
GET		/houtai/role/page						RoleCtl.page
POST	/houtai/role/edit						RoleCtl.edit
GET		/houtai/role/edit						RoleCtl.edit
POST	/houtai/role/save						RoleCtl.save
POST	/houtai/role/get						RoleCtl.get

GET		/cunmin/huji/chusheng					HujiCtl.chusheng
GET		/cunmin/huji/shenfen					HujiCtl.shenfen
POST	/cunmin/huji							HujiCtl.userjson
GET 	/cunmin/huji/shenfen/page				HujiCtl.shenfen_page

# Catch all
*       /{controller}/{action}                  {controller}.{action}
